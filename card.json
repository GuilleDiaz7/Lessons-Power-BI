{
	"name": "CardTemplate",
    "$schema": "https://raw.githubusercontent.com/microsoft/powerbi-desktop-samples/refs/heads/main/Report%20Theme%20JSON%20Schema/reportThemeSchema-2.127.json",
	"background": "#FFFFFF",
    "visualStyles": {
		"card": {
			"*": {
				"general": [{
					"responsive": true,
					"keepLayerOrder": true
				}],
				"labels": [{
					"color": { "solid": { "color": "#000000"}},
					"labelDisplayUnits": 0,
					"labelPrecision": 1,
					"fontSize": 28,
					"fontFamily":"wf_standard-font, helvetica, arial, sans-serif"
				}],
				"categoryLabels": [{
					"show": false,
					"color": { "solid": { "color": "#605E5C"}},
					"fontSize": 11,
					"fontFamily": "Segoe UI"
				}],
				"wordWrap": [{
					"show": true
				}],
				"background": [{
						"show": true,
						"color": { "solid": { "color": "#fcd0b1"}},
						"transparency": 0
				}],
				  "title": [{
				    "show": true,
                    "text": "Etiqueta",
				    "fontColor": { "solid": { "color": "#ffffff" } },
				    "background": { "solid": { "color": "#062b60" } },
				    "alignment": "left",
				    "fontSize": 11,
				    "fontFamily":"wf_standard-font, helvetica, arial, sans-serif"
				  }],
				  "border": [{
				    "show": true,
				    "color": { "solid": { "color": "#cccccc"}},
					"radius": 10
				  }]
			}
		}	}
}