{
	"name": "PowerBI Classes",
    "$schema": "https://raw.githubusercontent.com/microsoft/powerbi-desktop-samples/refs/heads/main/Report%20Theme%20JSON%20Schema/reportThemeSchema-2.127.json",
	"background": "#FFFFFF",
	"visualStyles": {
		"*": {
            "*": {
                "background": [
                    {
                        "show": true,
                        "color": {
                            "solid": {
                                "color": "#FFFFFF"
                            }
                        }
                    }
                ],
                "title": [
                    {
                        "show": true,
                        "text": "Rellene el título",
                        "alignment": "left",
                        "fontFamily":"Segoe UI Semibold",
                        "fontSize": 13,
                        "fontColor": {
                            "solid": {
                                "color": "#002C5F"
                            }
                        }
                    }
                ],
				"categoryAxis": [
                    {
                        "show": true,
                        "position": "Right",
                        "labelColor": {
                            "solid": {
                                "color": "#605E5C"
                            }
                        },
                        "fontSize": 9,
                        "fontFamily": "Segoe UI",
                        "innerPadding": 5,
                        "concatenateLabels": true,
                        "showAxisTitle": false,
                        "axisStyle": "showTitleOnly",
                        "titleColor": {
                            "solid": {
                                "color": "#252423"
                            }
                        },
                        "titleText": "",
                        "titleFontSize": 9,
                        "titleFontFamily": "Segoe UI",
                        "gridlineShow": false,
                        "gridlineColor": {
                            "solid": {
                                "color": "#605E5C"
                            }
                        }
                    }
                ],
				"valueAxis": [
                    {
                        "show": true,
                        "showAxisTitle": false,
                        "fontSize": 9,
                        "fontFamily": "Segoe UI",
                        "titleText": "",
                        "titleFontSize": 9,
                        "titleFontFamily": "Segoe UI",
                        "gridlineShow": false,
                        "gridlineColor": {
                            "solid": {
                                "color": "#605E5C"
                            }
                        }
                    }
                ],
				"legend": [
                    {
                        "show": true,
                        "position": "Bottom Center",
                        "showTitle": false,
                        "titleText": "",
                        "labelColor": {
                            "solid": {
                                "color": "#605E5C"
                            }
                        },
                        "fontFamily": "Segoe UI",
                        "fontSize": 10
                    }
                ]
            }
        },
		"barChart": {
            "*": {
                "background": [
                    {
                        "show": true,
                        "color": {
                            "solid": {
                                "color": "#FAFAFA"
                            }
                        }
                    }
                ],
                "divider": [
                    {
                        "show": false,
                        "color": {
                            "solid": {
                                "color": "#CCCCCC"
                            }
                        },
                        "style": "solid",
                        "width": 1,
                        "ignorePadding": false
                    }
                ],
                "title": [
                    {
                        "show": true,
                        "text": "Rellene el título",
                        "alignment": "left",
                        "fontFamily":"Segoe UI Semibold",
                        "fontSize": 13,
                        "fontColor": {
                            "solid": {
                                "color": "#002C5F"
                            }
                        }
                    }
                ],
                "spacing": [
                    {
                        "customizeSpacing": false,
                        "verticalSpacing": 3,
                        "spaceBelowTitle": 1,
                        "spaceBelowSubTitle": 2,
                        "spaceBelowTitleArea": 1
                    }
                ],
				"padding": [{
					"top": 10,
					"bottom": 5,
					"left": 10,
					"right": 5
				  }]
            }
        },
		"columnChart": {
            "*": {
                "background": [
                    {
                        "show": true,
                        "color": {
                            "solid": {
                                "color": "#FAFAFA"
                            }
                        }
                    }
                ],
                "divider": [
                    {
                        "show": false,
                        "color": {
                            "solid": {
                                "color": "#CCCCCC"
                            }
                        },
                        "style": "solid",
                        "width": 1,
                        "ignorePadding": false
                    }
                ],
                "title": [
                    {
                        "show": true,
                        "text": "Rellene el título",
                        "alignment": "left",
                        "fontFamily":"Segoe UI Semibold",
                        "fontSize": 13,
                        "fontColor": {
                            "solid": {
                                "color": "#002C5F"
                            }
                        }
                    }
                ],
                "spacing": [
                    {
                        "customizeSpacing": false,
                        "verticalSpacing": 3,
                        "spaceBelowTitle": 1,
                        "spaceBelowSubTitle": 2,
                        "spaceBelowTitleArea": 1
                    }
                ],
				"padding": [{
					"top": 10,
					"bottom": 5,
					"left": 10,
					"right": 5
				  }]
            }
        },
		"areaChart": {
            "*": {
                "background": [
                    {
                        "show": true,
                        "color": {
                            "solid": {
                                "color": "#FAFAFA"
                            }
                        }
                    }
                ],
                "divider": [
                    {
                        "show": false,
                        "color": {
                            "solid": {
                                "color": "#CCCCCC"
                            }
                        },
                        "style": "solid",
                        "width": 1,
                        "ignorePadding": false
                    }
                ],
                "title": [
                    {
                        "show": true,
                        "text": "Rellene el título",
                        "alignment": "left",
                        "fontFamily":"Segoe UI Semibold",
                        "fontSize": 13,
                        "fontColor": {
                            "solid": {
                                "color": "#002C5F"
                            }
                        }
                    }
                ],
                "spacing": [
                    {
                        "customizeSpacing": false,
                        "verticalSpacing": 3,
                        "spaceBelowTitle": 1,
                        "spaceBelowSubTitle": 2,
                        "spaceBelowTitleArea": 1
                    }
                ],
				"padding": [{
					"top": 10,
					"bottom": 5,
					"left": 10,
					"right": 5
				  }]
            }
        },
		"card": {
			"*": {
				"general": [{
					"responsive": true,
					"keepLayerOrder": true
				}],
				"labels": [{
					"color": { "solid": { "color": "#000000"}},
					"labelDisplayUnits": 0,
					"labelPrecision": 1,
					"fontSize": 28,
					"fontFamily":"wf_standard-font, helvetica, arial, sans-serif"
				}],
				"categoryLabels": [{
					"show": true,
					"color": { "solid": { "color": "#605E5C"}},
					"fontSize": 11,
					"fontFamily": "Segoe UI"
				}],
				"wordWrap": [{
					"show": true
				}],
				"background": [{
						"show": true,
						"color": { "solid": { "color": "#FAFAFA"}},
						"transparency": 0
				}],
				  "title": [{
				    "show": false,
				    "fontColor": { "solid": { "color": "#ffffff" } },
				    "background": { "solid": { "color": "#062b60" } },
				    "alignment": "left",
				    "fontSize": 11,
				    "fontFamily":"wf_standard-font, helvetica, arial, sans-serif"
				  }],
				  "border": [{
				    "show": true,
				    "color": { "solid": { "color": "#cccccc"}},
					"radius": 10
				  }]
			}
		},
		"shape": {
			"*": {
				"general": [{
					"keepLayerOrder": true
				}],
				"background": [{
					"show": true,
					"color": { "solid": { "color": "#fafafa"}},
					"transparency": 0
			}],
			"fill": [{
				"show": false,
				"color": { "solid": { "color": "#fafafa"}},
				"transparency": 0
		}],
		"outline": [{
			"show": false
		}],
		"text": [
			{
				"$id": "default",
				"fontFamily": "Segoe UI Semibold",
				"fontSize": 16,
				"fontColor": {
					"solid": {
						"color": "#002C5F"
					}
				},
				"show": true
				}],
		"title": [
                    {
                        "show": false,
                        "text": "Rellene el título",
                        "alignment": "left",
                        "fontFamily":"Segoe UI Semibold",
                        "fontSize": 13,
                        "fontColor": {
                            "solid": {
                                "color": "#002C5F"
                            }
                        }
                    }
                ]
			}
		},
		"slicer": {
			"*": {
				"date": [{
					"keepLayerOrder": true,
					"responsive": false,
					"hideDatePickerButton": false
				}],
				
				"background": [{
					"show": true,
					"color": { "solid": { "color": "#e6e6e6"}},
					"transparency": 90
			}],
                "title": [
                    {
                        "show": false,
                        "text": "Rellene el título",
                        "alignment": "center",
                        "fontFamily":"Segoe UI Semibold",
                        "fontSize": 11,
                        "fontColor": {
                            "solid": {
                                "color": "#002C5F"
                            }
                        }
                    }
                ],
				"visualHeader": [{
					"show": true,
					"fontFamily":"wf_standard-font, helvetica, arial, sans-serif",
                        "fontSize": 12,
						"fontColor": {
                            "solid": {
                                "color": "#002C5F"
                            }
                        }
			}],
			"border": [{
				"show": true,
				"color": { "solid": { "color": "#cccccc"}},
				"radius": 0
			  }]
		}
	}
}
}